generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SlackToken {
  id           String @id @default(cuid())
  access_token String
  team_id      String @unique
  team_name    String
  user_id      String? 
  bot_user_id  String?  
  scope        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model SlackChannel {
  id          String @id @default(cuid())
  channel_id  String 
  team_id     String 
  name        String 
  is_private  Boolean @default(false)
  is_archived Boolean @default(false)
  topic       String?
  purpose     String?
  member_count Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([channel_id, team_id])
}

model SlackMessage {
  id          String @id @default(cuid())
  message_id  String
  channel_id  String 
  team_id     String 
  user_id     String? 
  text        String? 
  thread_ts   String? 
  message_type String @default("message") 
  createdAt   DateTime @default(now())
  slack_ts    DateTime   
  @@unique([message_id, channel_id, team_id])
  @@index([team_id, channel_id, slack_ts])
}
